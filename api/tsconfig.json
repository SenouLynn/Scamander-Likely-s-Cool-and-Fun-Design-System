{
  "compilerOptions": {
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "module": "commonjs",

    "target": "es6",
    // "noEmit": tru,

    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "removeComments": true,
    "rootDir": ".",
    "outDir": "./dist"
  },
  "exclude": ["node_modules", "./dist/**/*"]
}
